# ==============================================================
# PROSPECTOR Backend Environment Variables
# Copy this file to .env and fill in your values
# ==============================================================

# Server Configuration
PORT=3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5500,https://your-domain.com

# ==============================================================
# GOOGLE API KEYS (REQUIRED)
# Get these from: https://console.cloud.google.com/apis/credentials
# ==============================================================

# Google Places API Key
# Enable: Places API, Maps JavaScript API
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Google Maps API Key (can be same as Places key)
# Enable: Directions API, Geocoding API, Distance Matrix API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ==============================================================
# FIREBASE CONFIGURATION
# Get these from: Firebase Console > Project Settings
# ==============================================================

# Firebase Project ID
FIREBASE_PROJECT_ID=your-project-id

# Firebase Web API Key (safe to expose, used by frontend)
FIREBASE_WEB_API_KEY=your_web_api_key

# Firebase Auth Domain
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com

# Firebase Storage Bucket
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Firebase Messaging Sender ID
FIREBASE_MESSAGING_SENDER_ID=123456789

# Firebase App ID
FIREBASE_APP_ID=1:123456789:web:abcdef

# ==============================================================
# FIREBASE ADMIN SDK (for server-side authentication)
# Get from: Firebase Console > Project Settings > Service Accounts
# Generate new private key and paste the entire JSON here
# ==============================================================

# Firebase Service Account JSON (entire JSON object as a single line)
# Example: {"type":"service_account","project_id":"...","private_key":"..."}
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}
